@using Microsoft.AspNetCore.Identity;
@using LoveYouALatte_Authentication.Data;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model MenuViewModel


@{
    var products = Model.Products.GroupBy(x => new { x.DrinkName, x.DrinkDescription });

}


<h1>Add Product: </h1>


<P>@ViewBag.ErrorMessage</P>


<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Item Name</th>
                <th scope="col">Quantity</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var prod in products)
            {
            <tr>
                <td>
                    <input type="text" id="itemName" name="itemName" value="" />
                </td>
                <td>
                    <input type="number" value="" class="w-50 quantityNumUpdate" id="quantity_"
                           oninput="validity.valid||(value='');" name="quantity_  >" min="1" max="10" step="1" size="2" />
                </td>

                <td>
                    <input type="text" id="itemDescription" name="itemName" value="" />
                </td> 

                <td>
                    <input type="number" id="itemPrice" name="itemPrice" value="" />
                </td> 


            </tr>
             }
    </table>
</div>
