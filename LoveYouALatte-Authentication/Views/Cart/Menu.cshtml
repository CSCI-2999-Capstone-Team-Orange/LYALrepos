@using Microsoft.AspNetCore.Identity
@using LoveYouALatte_Authentication.Data;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model MenuViewModel
@{
    var products = Model.Products.GroupBy(x => new { x.DrinkName, x.DrinkDescription });

}
<h1>@ViewData["Title"]</h1>


<div class="card-deck">
    <div class="row">
        @foreach (var prod in products)
        {
            <div class="col-lg-6">
                <div class="card mb-2">
                    <img class="card-img-top" src="~/Images/@(prod.Key.DrinkName).jpg" alt="@(prod.Key.DrinkName)" />
                    <div class="card-img-overlay">
                        <h4 class="card-title">@(prod.Key.DrinkName)</h4>
                    </div>


                    <h6 class="card-text text-center">@(prod.Key.DrinkDescription)</h6>

                    <div id="myNav" class="overlay">
                        <ul class="list-group list-group-flush">
                            @foreach (var item in prod)
                            {
                                <li class="list-group-item text-center">
                                    <h5>@(item.SizeName): $@(item.Price)</h5>
                                    <p hidden id="price_@item.ProductId">@(item.Price)</p>

                                    @if (SignInManager.IsSignedIn(User))
                                    {
                                        <label for="quantity_@item.ProductId">Quantity: <input data-productid="@item.ProductId" type="number" class="w-50 quantityNum" id="quantity_@item.ProductId" oninput="validity.valid||(value='');" name="quantity_@item.ProductId" min="1" max="10" step="1" size="2" /></label>
                                        <button onclick="openNav()" disabled data-productid="@item.ProductId" class="btn btn-orange btn-add" id="btn_add_@item.ProductId"> Add To Cart<i class="fa fa-coffee"></i></button>
                                        <button class="addOnButton"> Add on</button>
                                        <br />
                                    }
                                    else //redirect
                                    {

                                    }
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                }
            </div>
        }

    
        <div style="display: none;" id="addOn" class="z-index-2 col-lg-6 position-absolute bg-primary">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            <div class="overlay-content">
                @*<a href="#">Addons</a>*@
                <h1>Addons</h1>

                <form action="/action_page.php">
                    <input type="checkbox" id="Creamer1" name="Skim" value="Milk">
                    <label for="vehicle1"> Skimmed milk</label><br>
                    <input type="checkbox" id="Creamer2" name="%2" value="Milk">
                    <label for="vehicle2"> %2 Milk</label><br>
                    <input type="checkbox" id="Creamer3" name="Almond" value="Milk">
                    <label for="vehicle3"> Almond Milk</label><br><br>
                    <input type="submit" value="Submit">
                </form>

                <button class="closeAddOn btn-danger"> Close</button>

                <label for=""></label>
            </div>
        </div>

        @*<script>
            function openNav() {
                document.getElementById("myNav").style.display = "block";
            }

            function closeNav() {
                document.getElementById("myNav").style.display = "none";
            }
        </script>*@
    <script>
    $(document).ready(function () {

    });

        

        $('.closeAddOn').click(function () {
            $("#addOn").hide();

        });


    $('.quantityNum').on('input change mouseup keyup', function () {
        var ID = $(this).data('productid');

        var quantity = $('#quantity_' + ID).val();
        if (quantity == "") {
            $("#btn_add_" + ID).prop("disabled", true);
        }
        else {
            $("#btn_add_" + ID).prop("disabled", false);
        }
    });

    $('.btn-add').click(function () {
        var ID = $(this).data('productid');
        var price = $('#price_' + ID).text();
        var quantity = $('#quantity_' + ID).val();

        var totalPrice = price * quantity;
        var lineTax = totalPrice * 0.075;
        var lineCost = lineTax + totalPrice;

        $.ajax({

        contentType: "application/json; charset=utf-8",
        url: '@Url.Action("AddToCart", "Cart")',
        data: {
            productid: ID,
            quantity: quantity,
            totalPrice: totalPrice,
            lineTax: lineTax,
            lineCost: lineCost
        },
        success: function () {
            alert("Succesfully added to cart!");
            $("#addOn").show();

        },
        error: function (data) {
            alert('Error: ' + data.statusText);
        }
        });
    });

    </script>


