@using Microsoft.AspNetCore.Identity
@using LoveYouALatte_Authentication.Data;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model MenuViewModel
@{
    var products = Model.Products.GroupBy(x => new { x.DrinkName, x.DrinkDescription });
    var categories = Model.Products.GroupBy(x => new { x.DrinkCategory });
}
<h1>@ViewData["Title"]</h1>

@foreach (var cat in categories)
{
    <h1 class="text-center">@cat.Key.DrinkCategory</h1>
}
<div class="card-deck">
    <div class="row">
        @foreach (var prod in products)
        {
            <div class="col-lg-6">
                <div class="card mb-2">
                    <img class="card-img-top" src="~/Images/@(prod.Key.DrinkName).jpg" alt="@(prod.Key.DrinkName)" />
                    <div class="card-img-overlay">
                        <h4 class="card-title">@(prod.Key.DrinkName)</h4>
                    </div>
                    <h6 class="card-text text-center">@(prod.Key.DrinkDescription)</h6>


                    <ul class="list-group list-group-flush">
                        @foreach (var item in prod)
                        {
                            <li class="list-group-item text-center">
                                <h5>@(item.SizeName): $@(item.Price)</h5>
                                <p hidden id="price_@item.ProductId">@(item.Price)</p>

                                @if (SignInManager.IsSignedIn(User))
                                {
                                    <label for="quantity_@item.ProductId">Quantity: <input data-productid="@item.ProductId" type="number" class="w-50 quantityNum" id="quantity_@item.ProductId" oninput="validity.valid||(value='');" name="quantity_@item.ProductId" min="1" max="10" step="1" size="2" /></label>
                                    <button disabled data-productid="@item.ProductId" class="btn btn-orange btn-add" id="btn_add_@item.ProductId">Add To Cart<i class="fa fa-coffee"></i></button>
                                    <br />
                                }
                                else //redirect
                                {

                                }
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }
    </div>
</div>




<div style="display: none; float: right; right: 0px; top: 50px; " id="addOn" class="z-index-2 w-25 h-100 position-fixed bg-secondary text-light">
    <div class="overlay-content text-center">
        <br /><br />
        <h1>Addons</h1>
        <br />
        <p> Here are the creamer options we have at love you a latte!</p>
        <br />
       
        <form method="post" asp-action="addAddOns" asp-controller="cart">

            <h2>Creamers</h2>

            @for (int i = 0; i < Model.addOns.addOnList.Count; i++)
            {
                <div>
                    <input class="hello" data-addOn='@Json.Serialize(@Model.addOns.addOnList[i])' type="hidden" asp-for="@Model.addOns.addOnList[i].addOnId" />
                        <input type="hidden" asp-for="@Model.addOns.addOnList[i].addOnType" />
                        <input type="hidden" asp-for="@Model.addOns.addOnList[i].addOnDescription" />
                    <input class="add-on-checkbox" data-addOn='@Json.Serialize(@Model.addOns.addOnList[i])' data-addOnId='@Model.addOns.addOnList[i].addOnId' type="checkbox" asp-for="@Model.addOns.addOnList[i].isSelected" />
                    <label class="form-check-label">
                        @Model.addOns.addOnList[i].addOnDescription
                    </label>

                </div>
            }
            <br />
            <input class="btn btn-orange submit" id="addOnSubmit" type="button" value="Add to Drink" /><br /><br />
            <input class="btn btn-primary submit" type="button" value="No Thank You"
        </form>

    </div>

</div>

<script>
    $(document).ready(function () {
       $('.submit').click(function () {
            drinkAddOns = [];

            $(".add-on-checkbox").each(function (i, item) {
                var $item = $(item);
                drinkAddOns.push({
                    addOnId: $item.data("addonid"),
                    isSelected: $item[0].checked,
                    addOnType: "creamer",
                    addOnDescription: "test"
                })
            })
            
            
           $.ajax({
               type: "POST",
               url: '@Url.Action("addAddOns", "Cart")',
               contentType: "application/json; charset=utf-8",
               dataType: "json",
               data: JSON.stringify(drinkAddOns),
                success: function (response) {
                    alert(response.responseText);
                    $("#addOn").hide("slow");
                    $(".quantityNum").each(function () {
                        $(this).val('');
                    })
                    $(".add-on-checkbox").each(function () {
                        $(this).prop("checked", false);
                    })



                },
                error: function (response) {
                    alert('Error: ' + response.responseText);
                }
            });




       });

      
    });






    


    $('.quantityNum').on('input change mouseup keyup', function () {
        var ID = $(this).data('productid');

        var quantity = $('#quantity_' + ID).val();
        if (quantity == "") {
            $("#btn_add_" + ID).prop("disabled", true);
        }
        else {
            $("#btn_add_" + ID).prop("disabled", false);
        }
    });

    $('.btn-add').click(function () {
        var ID = $(this).data('productid');
        var price = $('#price_' + ID).text();
        var quantity = $('#quantity_' + ID).val();

        var totalPrice = price * quantity;
        var lineTax = totalPrice * 0.075;
        var lineCost = lineTax + totalPrice;

        $.ajax({

        contentType: "application/json; charset=utf-8",
        url: '@Url.Action("AddToCart", "Cart")',
        data: {
            productid: ID,
            quantity: quantity,
            totalPrice: totalPrice,
            lineTax: lineTax,
            lineCost: lineCost
        },
        success: function () {
            alert("Succesfully added to cart!");
            $("#addOn").show("slow");

        },
        error: function (data) {
            alert('Error: ' + data.statusText);
        }
        });
    });

</script>
