@model CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
    var totalTax = Model.Carts.Sum(x => (0.075m * x.TotalPrice));
    var totalCart = Model.Carts.Sum(x => totalTax + x.TotalPrice);

}
<h1>@ViewData["Title"]<i class="fa fa-shopping-cart"></i></h1>

<h1>Your Cart: </h1>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Item Name</th>
                <th scope="col">Quantity</th>
                <th scope="col">Size</th>
                <th scope="col">Price</th>
                <th scope="col">Line Price</th>
                <th scope="col">Tax Amount</th>
                <th scope="col">Subtotal</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var cartItem in Model.Carts)
            {
                <tr>
                    <td>@cartItem.DrinkName</td>
                    <td>@cartItem.Quantity</td>
                    <td>@cartItem.SizeName</td>
                    <td>@cartItem.Price</td>
                    <td>@cartItem.TotalPrice</td>
                    <td>@(0.075m * cartItem.TotalPrice)</td>
                    <td>@((0.075m * cartItem.TotalPrice) + cartItem.TotalPrice)</td>
                </tr>
            }

        <tr>
            <td colspan="5"></td>
            <td colspan="1" id="totalTax">@totalTax</td>
            <td colspan="1" id="totalCost">@totalCart</td>
        </tr>
        </tbody>
    </table>
</div>


<form action="" method="post">
    <input type="submit" value="Clear Cart" name="clear" asp-controller="Cart"
           asp-action="ClearCart" />
    <input type="submit" value="Purchase" name="purchase" class=" btn btn-orange btn-purchase" asp-controller="Cart"
           asp-action="Purchase" />

</form>

